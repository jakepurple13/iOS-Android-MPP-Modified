<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:textSize="25dp"
        android:text="Prev"
        android:layout_above="@id/liveAction"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/liveAction"
        android:text="Live Action"
        android:background="@android:color/transparent"
        android:onClick="goToShow"
        android:tag="LIVE_ACTION"
        android:textColor="#027AFF"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cartoon"
        android:text="Cartoon"
        android:background="@android:color/transparent"
        android:onClick="goToShow"
        android:layout_below="@id/liveAction"
        android:tag="CARTOON"
        android:textColor="#027AFF"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/musicGame"
        android:text="Music Game"
        android:background="@android:color/transparent"
        android:layout_below="@id/cartoon"
        android:textColor="#027AFF"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>